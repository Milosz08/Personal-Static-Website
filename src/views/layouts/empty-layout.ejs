<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Milosz Gilga</title>
    <%- include("../partials/_head-includes.partial.ejs") %>
    <link rel="stylesheet" href="/assets/styles/common.css">
</head>
<body class="d-flex flex-column h-100">
    <main class="my-5 my-md-0 flex-grow-0 flex-md-grow-1 container d-flex flex-column justify-content-start justify-content-md-center align-items-center">
        <%- body %>
    </main>
    <footer class="container mb-5">
        <hr/>
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center justify-content-md-start mb-2 mb-md-0">
                &copy; <%= nowYear %> by Milosz Gilga. All rights reserved.
            </div>
            <div class="col-md-6 d-flex justify-content-center justify-content-md-end">
                <div class="hstack gap-3">
                    <a href="/">Home page</a>
                    <% if (loggedUser) { %>
                        <a href="/logout">Logout</a>
                    <% } else { %>
                        <a href="/login">Login</a>
                        <a href="/request-change-password">Forgot password</a>
                    <% } %>
                </div>
            </div>
        </div>
    </footer>
    <%- include("../partials/_scripts-includes.partial.ejs") %>
</body>
</html>
