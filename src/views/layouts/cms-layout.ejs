<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | CMS Panel</title>
    <%- include("../partials/_head-includes.partial.ejs") %>
    <link rel="stylesheet" href="/assets/styles/common.css">
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navbarToggler">
                <a class="navbar-brand" href="/cms/projects">CMS Panel</a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link <%= url.includes("project") && "active" %>" href="/cms/projects">
                            Projects
                        </a>
                    </li>
                    <% if (isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= url.includes("personals") && "active" %>" href="/cms/personals">
                                Personals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= url.includes("account") && "active" %>" href="/cms/accounts">
                                Accounts
                            </a>
                        </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <button class="nav-link dropdown-toggle bg-transparent border-0" data-bs-toggle="dropdown">
                            <%= loggedUser.login %> (<%= loggedUser.role.toLowerCase() %>)
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="/">Home page</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container mt-4">
        <%- body %>
    </main>
    <footer class="container">
        <hr/>
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center justify-content-md-start mb-2 mb-md-0">
                Logged as: <span class="fw-bold ms-1">
                    <%= loggedUser.login %> (<%= loggedUser.role.toLowerCase() %>)
                </span>
            </div>
            <div class="col-md-6 d-flex justify-content-center justify-content-md-end">
                <div class="hstack gap-3">
                    <a href="/">Home page</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </footer>
    <%- include("../partials/_scripts-includes.partial.ejs") %>
    <script src="/assets/js/bootstrap-addons.js"></script>
</body>
</html>
