<footer class="container mb-5">
    <hr class="mb-1"/>
    <div class="mb-3 d-flex justify-content-end w-100">
        <a class="secondary-text-color text-decoration- standard-font" href="/login">Login</a>
    </div>
    <div class="mt-2 row">
        <div class="col-md-4 d-flex justify-content-center order-1 order-md-1">
            <div class="hstack gap-2">
                <i class="fa-regular fa-envelope dark-icon"></i>
                <a class="standard-font primary-text-color anchor-link" href="mailto:<%= personalData.firstEmail %>" target="_blank">
                    <%= personalData.firstEmail %>
                </a>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center order-3 order-md-2">
            <div class="hstack gap-3">
                <% for (const link of socialLinks) { %>
                    <a href="<%= link.link %>" target="_blank" title="<%= link.paraphrase %>">
                        <i class="<%= link.iconClass %> standard-icon"></i>
                    </a>
                <% } %>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center order-2 order-md-3 mb-4 mb-md-0">
            <div class="hstack gap-2">
                <i class="fa-solid fa-at dark-icon"></i>
                <a class="standard-font primary-text-color anchor-link" href="mailto:<%= personalData.secondEmail %>" target="_blank">
                    <%= personalData.secondEmail %>
                </a>
            </div>
        </div>
    </div>
</footer>
