{
  "singleQuote": true,
  "plugins": ["prettier-plugin-astro", "@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "importOrder": [
    "^(astro*)$",
    "^(react*)$",
    "^([a-zA-Z].*)$",
    "^~/(.*)$",
    "^[./]",
    "^[../]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
