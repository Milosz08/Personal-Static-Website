{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Node application serving personal website.",
  "scripts": {
    "dev:start": "webpack --watch --progress --config .webpack/webpack-dev.config.cjs",
    "build": "webpack --progress --config .webpack/webpack-prod.config.cjs",
    "lint:check": "npx eslint src/**/*.{ts,js,cjs}",
    "lint:fix": "npx eslint src/**/*.{ts,js,cjs} --fix",
    "format": "npx prettier . --write",
    "types:check": "npx tsc --noEmit",
    "husky:add-pre-commit": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "husky:add-pre-push": "npx husky add .husky/pre-push \"yarn run types:check\"",
    "configure:husky": "npx husky install && yarn run husky:add-pre-commit && yarn run husky:add-pre-push"
  },
  "private": true,
  "author": {
    "name": "Mi≈Çosz Gilga",
    "email": "personal@miloszgilga.pl",
    "url": "https://miloszgilga.pl"
  },
  "license": "UNLICENSED",
  "lint-staged": {
    "**/*.{ts,js,cjs,json}": [
      "yarn run lint:fix",
      "yarn run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run types:check"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "commonmark": "^0.30.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.7",
    "mongoose": "^7.0.4",
    "mongoose-unique-validator": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "nocache": "^3.0.4",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.14",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/commonmark": "^0.27.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-ejs-layouts": "^2.5.1",
    "@types/express-session": "^1.17.7",
    "@types/handlebars": "^4.1.0",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.7",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon-webpack-plugin": "^4.8.1",
    "prettier": "^3.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.0.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-remove-empty-scripts": "^1.0.4"
  }
}
